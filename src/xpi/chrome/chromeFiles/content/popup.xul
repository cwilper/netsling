-->
  <image src="chrome://netsling/content/images/icon18.png" width="18" height="18" style="margin-right: 5px"/>
  <textbox tabindex="0" id="command" cols="30" size="30"/>
  <button tabindex="1" dlgtype="accept" label="Run"/>
</hbox>

</dialog>
